<table class='table table-hover table-inverse mt-4'>
  <thead>
    <%= link_to '', new_admin_item_path %>
    <tr>
      <th class="col-1">商品ID</th>
      <th>商品名</th>
      <th class="col-2">税抜価格</th>
      <th>ジャンル</th>
      <th class="col-2">販売ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    　<tr>
        <td><%= item.id %></td>
        <td><%= link_to item.item_name, admin_item_path(item) %></td>
        <td><%= (item.price).to_s(:delimited) %></td>
        <td><%= item.genre.genre_name %></td>
        <td>
        　<% if item.is_status == true %>
        　<p>販売中</p>
        <% else %>
          <p>販売停止中</p>
        <% end %>
      　</td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= paginate @items %>