<div class="container">
  <h3 class="my-3">商品詳細</h3>
  <div class="row">
    <div class="col-lg-4 col-md-12 mx-auto">
      <%= attachment_image_tag @item, :image, :fill,300,200  %>
    </div>
    <div class="col-lg-8 col-md-12 mx-auto">
      <table class="table table-borderless">
        <tr>
          <th>商品名</th>
          <td><%= @item.item_name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.genre_name %></td>
        </tr>
        <tr>
          <th>税込価格<br>（税抜価格）</th>
          <td><%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td><% if @item.is_status == true %>販売中<% else %>販売停止<% end %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success center-block " %>
    </div>
  </div>
</div>









