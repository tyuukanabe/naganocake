<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h3 class="my-3">商品新規登録</h3>
　    <%= form_with model: [:admin, @item], local:true do |f| %>
　    <div class="form-group row">
        <%= f.label :商品画像, class: "col-3" %>
        <%= f.attachment_field :image, class: "form col-7" %>
      </div>
      <div class="form-group row">
        <%= f.label :商品名, class: "col-3" %>
        <%= f.text_field :item_name, class: "form-control col-7" %>
      </div>
      <div class="form-group row">
        <%= f.label :商品説明, class: "col-3" %>
        <%= f.text_area :introduction, class: "form-control col-7" %>
      </div>
      <div class="form-group row">
        <%= f.label :ジャンル名, class: "col-3" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, prompt: "選択してください", class: 'form-control col-7' %>
      </div>
      <div class="form-group row">
        <%= f.label :税抜価格, class: "col-3" %>
        <%= f.text_field :price, class: "form-control col-7" %>
        <p class="col-1"円></p>
      </div>
      <div class="form-group row">
        <%= f.label :販売ステータス, class: "col-4" %>
        <div class="col-7">
          <%= f.label :販売中 %>
          <%= f.radio_button :is_status, true %>
          <%= f.label :販売停止 %>
          <%= f.radio_button :is_status, false %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
　</div>
</div>





