<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="my-3">ジャンル編集</h3>
      <%= form_with model:@genre,url: admin_genre_path(@genre.id), local:true do |f| %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :genre_name %>
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>