<div class="container">
  <div class="row">
    <div class="col-5">
      <h3 class="my-3">ジャンル一覧・追加</h3>
      <%= form_with model:@newgenres,url: admin_genres_path, lacal:true do |f| %>
        <div class="form-group">
          <%= f.label :ジャンル名 %>
          <%= f.text_field :genre_name, placeholder: "ジャンル名" %>
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      <% end %>

      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genre_name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>