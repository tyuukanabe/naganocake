<table class='table table-hover table-inverse mt-4'>
  <thead>
    <tr>
      <th class="col-1">購入日時</th>
      <th>購入者</th>
      <th class="col-2">購入個数</th>
      <th class="col-2">注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    　<tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
        <td></td>
        <td><%= (item.price).to_s(:delimited) %></td>
        <td><%= order.order_status_i18n %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= paginate @items %>