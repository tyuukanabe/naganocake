<h4>ショッピングカート</h4>
<div><%= link_to "カートを空にする", destroy_all_path, method: :delete, class: "btn btn-danger" %></div>
<table class="table">
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価(税込)</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <%# @cart_items.each do |cart_item| %>
    <tr>
      <td><%#= attachment_image_tag cart_item.item, :image, :fill,50,50 %>
          <%#= cart_item.item_name %></td>
      <td>¥<%#= ((cart_item.price*1.1).round).to_s(:delimited) %></td>
      <td>
        <%= form_with url: cart_items_path, method: :patch, local: true do |f| %>
        <%= f.select :quantity, [*1..10] %>
        <%= f.hidden_field :item_id, :value => @cart_item %>
        <%= f.hidden_field :customer_id, :value => current_customer.id %>
        <%= f.submit "変更", class: "btn btn-success" %>
        <% end %>
      </td>
      <td>¥</td>
      <td><%= link_to "削除する", cart_items_path, class: "btn btn-danger" %></td>
    </tr>
    <%# end %>
  </tbody>
</table>
<div><%= link_to "買い物を続ける", "/", class: "btn btn-primary" %></div>
<table>
  <tr>
    <td>合計金額
    ¥<%= @sum.to_s(:delimited) %></td>
  </tr>
</table>
<div><%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %></div>
