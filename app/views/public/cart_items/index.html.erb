<h4>ショッピングカート</h4>
<div><%= link_to "カートを空にする", destroy_all_path, method: :delete, class: "btn btn-danger" %></div>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= attachment_image_tag cart_item.item, :image, :fill,100,100 %></td>
      <td><%= cart_item.item.item_name %></td>
      <!--単価（税込）-->
      <td>¥<%= (cart_item.item.price) %></td>
      <!--数量変更-->
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item.id), local: true do |f| %>
        <%= f.select :quantity, [*1..10], selected: cart_item.quantity %>
        <%= f.hidden_field :item_id, :value => cart_item.item_id %>
        <%= f.hidden_field :customer_id, :value => current_customer.id %>
        <%= f.submit "変更", class: "btn btn-success" %>
        <% end %>
      </td>
      <!--小計＝単価（税込）×数量-->
      <td>
        <% price = (cart_item.item.price * cart_item.quantity) %>
        ¥<%= price.to_s(:delimited) %>
      </td>
      <th><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></th>
    </tr>
    <% @sum += price %>
    <% end %>
  </tbody>
</table>
　<div><%= link_to "買い物を続ける", "/", class: "btn btn-primary" %></div>
<table>
  <tr>
    <td>合計金額(税込)¥<%= @sum.to_s(:delimited) %></td>
  </tr>
</table>
<div><%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %></div>
