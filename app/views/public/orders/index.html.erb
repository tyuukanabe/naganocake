<div class="container">
  <h3 class="my-3">注文履歴一覧</h3>
  <table class='table table-bordered'>
  <tr class="table-active">
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払い金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
    <td>
      〒<%= order.ship_post_code %><br>
      <%= order.ship_to_address %><br>
      <%= order.ship_name %>
    </td>
    <td>
      <% order.order_items.each do |order_item| %>
        <%= order_item.item.item_name %><br>
    　<% end %>
    </td>
    <td><%= order.total_due %></td>
    <td><%= order.order_status_i18n %></td>
    <td><%= link_to '表示する', order_path(order), class: "btn btn-primary" %></td>
  </tr>
  <% end %>
  </table>
  <%= paginate @orders %>
</div>