<div class="container">
  <div class="row">
    <h3 class="offset-1 my-3">配送先編集</h3>
    <%= form_with model:@address, local:true do |f| %>
      <div class="row">
        <div class="offset-1 col-4"><%= f.label "郵便番号（ハイフンなし）" %></div>
        <div class="col-7 mb-2"><%= f.text_field :post_code, class: "form-control" %></div>
        <div class="offset-1 col-4"><%= f.label "住所" %></div>
        <div class="col-7 mb-2"><%= f.text_field :address, class: "form-control" %></div>
        <div class="offset-1 col-4"><%= f.label "宛名" %></div>
        <div class="col-4 mb-2"><%= f.text_field :name, class: "form-control" %></div>
        <div class="offset-1 col-2"><%= f.submit "変更内容を保存", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>