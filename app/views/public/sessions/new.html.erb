<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 ">
     <h3 class="offset-1 my-4">ログイン</h3>
     <h5 class="offset-2 my-4">会員の方はこちらからログイン</h5>
     <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="row form-group">
     <div class="offset-1 ml-6 mb-3"><%= f.label :"メールアドレス" %></div>
     <div class="col-8"><%= f.email_field :email, class: "form-control" %></div>
     <div class="offset-1 ml-6 mb-3"><%= f.label :"パスワード" %></div>
     <div class="col-8 ml-4"><%= f.password_field :password, class: "form-control" %></div>
     <%# if devise_mapping.rememberable? %>
     <!--<div class="offset-1 mb-1"><%#= f.check_box :remember_me %></div>-->
     <!--<div class="col-4"><%#= f.label :remember_me %></div>-->
     <%# end %>
    </div>
    <div class="actions offset-5 mt-3">
    <%= f.submit "ログイン", class: "btn btn-primary col-8 " %>
    </div>
　　<% end %>
    <%#= render "public/shared/links" %>
     <h5 class="offset-2 mt-4 ">会員登録がお済みでない方</h5>
     <div class="row form-group">
     <div class="offset-5 mt-1"><%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。</div>
     </div>
    </div>
  </div>
</div>
