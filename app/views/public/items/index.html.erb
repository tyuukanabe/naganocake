
<div class="container-fluid px-5 px-sm-3 mt-4">
<h3 class="text-center">商品一覧<small>(全 <%= @items.count %>件)</small></h3>


<div class="row">

<div class="col-3">

    <%= render 'public/homes/genres', genres: @genres %>

</div>

    <div class="col-9">
    <div class="row">
    <% @items.each do |item| %>
        <div class="col-md-3">
            <div class="mx-auto mt-4">
              <div class="card-deck">
              <div class="card">

              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag item, :image, :fill, 250, 160, fallback: "no_image.jpg", class: "card-img-top" %>
              <% end %>
              <div class="card-body">
                <p class="card-title">
                    <%= link_to item_path(item.id) do %>
                        <strong><i class="far fa-flag"></i><span> <%= item.item_name %></span></strong>
                    <% end %>
                </p>
                <p class="card-text">>¥ <%= item.price %>円</p>
              </div>
            </div>
          </div>
          </div>
        </div>
    <% end %>
    </div>
    </div>
    <%= paginate @items %>
</div>
</div>