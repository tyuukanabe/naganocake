<div class="container">
  <div class="row no-gutters">
    <h3 class="offset-1 my-2">新規会員登録</h3>
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render "public/shared/error_messages", resource: resource %>
     <div class="row form-group">
  <!--<div class="field">-->
    <div class="offset-1 col-3 mb-3"><%= f.label :"名前" %></div>
    <div class="col-8 mb-2"><%= f.label :"(性)" %><%= f.text_field :last_name, autofocus: true %><%= f.label :"(名)" %><%= f.text_field :first_name, autofocus: true %></div>
  <!--</div>-->
  <!--<div class="field">-->
    <div class="offset-1 col-3 mb-3"><%= f.label :"フリガナ" %></div>
    <div class="col-8 mb-2"><%= f.label :"(セイ)" %><%= f.text_field :last_name_kana, autofocus: true %><%= f.label :"(メイ)" %><%= f.text_field :first_name_kana, autofocus: true %></div>
  <!--</div>-->
  <!--<div class="field">-->
    <div class="offset-1 col-3 mb-3"><%= f.label :"メールアドレス" %></div>
     <div class="col-8 mb-2"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  <!--</div>-->
  <!--<div class="field">-->
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :post_code, autofocus: true %>
  <!--</div>-->
  <!--<div class="field">-->
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)"%>
    <%= f.text_field :telephone, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :"パスワード(６文字以上)" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :"パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>
<%= render "public/shared/links" %>

  </div>
 </div>
</div>