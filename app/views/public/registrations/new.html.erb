<div class="container">
  <div class="row">
    <h3 class="offset-1 my-4">新規会員登録</h3>
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render "public/shared/error_messages", resource: resource %>
     <div class="row form-group">
       <div class="offset-1 col-3 mb-3"><%= f.label :"名前" %></div>
       <div class="col-4 mb-2"><%= f.label :"(性)" %><%= f.text_field :last_name, class: "form-control"%></div>
       <div class="col-4 mb-2"><%= f.label :"(名)" %><%= f.text_field :first_name, class: "form-control"%></div>
       <div class="offset-1 col-3 mb-3"><%= f.label :"フリガナ" %></div>
       <div class="col-4 mb-2"><%= f.label :"(セイ)" %><%= f.text_field :last_name_kana, class: "form-control" %></div>
       <div class="col-4 mb-2"><%= f.label :"(メイ)" %><%= f.text_field :first_name_kana, class: "form-control" %></div>
       <div class="offset-1 col-3 mb-3"><%= f.label :"メールアドレス" %></div>
       <div class="col-4 mr-4"><%= f.email_field :email, class: "form-control" %></div>
       <div class="offset-1 col-3 mb-3"><%= f.label :"郵便番号(ハイフンなし)" %></div>
       <div class="col-4 mr-4"><%= f.text_field :post_code, class: "form-control" %></div>
       <div class="offset-1 col-3 mb-3"><%= f.label :"住所" %></div>
       <div class="col-8"><%= f.text_field :address, class: "form-control" %></div>
       <div class="offset-1 col-3 mb-3"><%= f.label :"電話番号(ハイフンなし)"%></div>
       <div class="col-4 mr-4"><%= f.text_field :telephone, class: "form-control" %></div>
       <% if @minimum_password_length %>
       <div class="offset-1 col-3 mb-3"><%= f.label :"パスワード(６文字以上)" %></div>
       <div class="col-4 mr-4"><%= f.password_field :password, class: "form-control" %></div>
       <% end %>
       <div class="offset-1 col-3 mb-3"><%= f.label :"パスワード(確認用)" %></div>
       <div class="col-4"><%= f.password_field :password_confirmation, class: "form-control" %></div>
     </div>
      <div class="actions offset-5 mt-3">
       <%= f.submit "新規登録", class: "btn btn-success col-8 ml-2" %>
      </div>
     <% end %>
     <%#= render "public/shared/links" %>
     <h4 class="offset-1 my-4 ">既に登録済みの方</h4>
     <div class="my-4 ml-4"><%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。</div>
  </div>
</div>