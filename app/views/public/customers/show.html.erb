<div class="container">
  <div class="row">
    <div class="col-md-12 col-sm-12 mx-2 mx-sm-auto rounded px- my-5">
        <h4>マイページ</h4>
        <div class="font-weight-bold col-3 my-3">登録情報 <%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-success btn-sm" %></div>
        <table class="col-7 table table-bordered mt-3 customer_table ">
            <tr>
            <td class="table-active">氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
            </tr>
            <tr>
            <td class="table-active">カナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
            </tr>
            <tr>
            <td class="table-active">郵便番号</td>
            <td><%= @customer.post_code %></td>
            </tr>
            <tr>
            <td class="table-active">住所</td>
            <td><%= @customer.address %></td>
            </tr>
            <tr>
            <td class="table-active">電話番号</td>
               <td><%= @customer.telephone %></td>
            </tr>
            <tr>
            <td class="table-active">メールアドレス</td>
            <td><%= @customer.email %></td>
            </tr>
        </table>
            　<div class ="font-weight-bold col-3">配送先 <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary btn-sm " %></div>
            　<div class ="font-weight-bold col-3">注文履歴 <%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-sm" %></div>
    </div>
  </div>
</div>