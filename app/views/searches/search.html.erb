<div class="container">
  <h3>"<%= @keyword %>"一覧</h3>
  <p>全<%= @items.count %>件</p>
  <div class="row">
      <% @items.each do |item| %>
          <div class="col-md-4">
              <div class="w-50 mx-auto mt-4">
                <%= link_to item_path(item.id) do %>
                  <%= attachment_image_tag item, :image, :fill, 250, 160, fallback: "no_image.jpg" %>
                <% end %>
                <div class="card-body">
                  <p class="card-title">
                      <%= link_to item_path(item.id) do %>
                          <strong><i class="far fa-flag"></i><span> <%= item.item_name %></span></strong>
                      <% end %>
                  </p>
                  <p>¥ <%= item.price %>円</p>
                </div>
              </div>
          </div>
      <% end %>
  </div>
</div>